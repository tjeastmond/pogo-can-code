{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "noUnusedLocals": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },

  "include": ["**/*.ts", "*.ts", "**/*.d.ts", "*.d.ts"],
  "exclude": ["node_modules", "dist", "testfiles"]
}
